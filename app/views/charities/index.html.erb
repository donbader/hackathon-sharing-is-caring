<div class="card">
  <div class="card-header border-0">
    <h3 class="card-title">Charities</h3>
    <div class="card-tools">
      <%= link_to '<i class="fas fa-download"></i>'.html_safe, 'new', class: "btn btn-tool btn-sm" %>
    </div>
  </div>
  <div class="card-body table-responsive p-0">
    <table class="table table-striped table-valign-middle">
      <thead>
      <tr>
        <th>Name</th>
        <th>Mission</th>
        <th>Description</th>
        <th></th>
        <th></th>
        <th>Vote</th>
      </tr>
      </thead>
      <tbody>
      <% @charities.each do |charity| %>
        <tr>
          <td>
            <img src="<%= asset_path 'default-150x150.png' %>" alt="Product 1" class="img-circle img-size-32 mr-2">
            <%= charity.name %>
          </td>
          <td><%= charity.mission %></td>
          <td><%= charity.short_desc %></td>
          <td><%= link_to '<i class="fas fa-search"></i>'.html_safe, 'charities/' + charity.id.to_s, class: "text-muted"%></td>
          <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, 'charities/delete', params: { id: charity.id }, class: "text-muted" %></td>
          <td>
            <%= form_with url: "/votes", method: "POST" do %>
              <%= text_field_tag :contact_no, nil, placeholder: "Contact No." %>
              <%= number_field_tag :amount, 1, step: 1 %>
              <%= hidden_field_tag :charity_id, charity.id %>
              <button type="submit" class="btn btn-primary">Vote</button>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<!-- /.card -->
